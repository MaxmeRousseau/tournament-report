generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uuid        String       @id @default(uuid())
  email       String       @unique
  name        String?
  role        String       @default("USER")
  tournaments Tournament[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

model Tournament {
  uuid        String   @id @default(uuid())
  name        String
  date        DateTime
  location    String
  description String?
  user        User     @relation(fields: [userId], references: [uuid])
  userId      String
  rounds      Round[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

model Round {
  uuid         String     @id @default(uuid())
  number       Int
  tournament   Tournament @relation(fields: [tournamentId], references: [uuid])
  tournamentId String
  results      String
  diceRolls    String
  notes        String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([tournamentId])
}
